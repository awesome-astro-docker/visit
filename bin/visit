#! /bin/bash

WRAPDIR=/home/dlang/visit

#>&2 echo "Visit wrapper script on hostname $(hostname)"

# VisIt sets a -dir argument that is wrong; override it.
atargs="$@"
subargs=$(echo $atargs | sed s+$WRAPDIR+/visit/visit3_0_0.linux-x86_64+g)

#>&2 echo atargs: $atargs
#>&2 echo subargs: $subargs

# Are we inside the container?  If so, launch the wrapped script
if [ $(hostname) == sing ]; then
    #>&2 echo "Running within the container."
    /visit/visit3_0_0.linux-x86_64/bin/visit $subargs
    exit $?
fi

module load singularity

#>&2 echo "I am the /home/dlang/visit/bin/visit wrapper script"
$WRAPDIR/bin/xvfb-run -a -s "-screen 0 1024x768x24" singularity exec --hostname sing /gpfs/dlang/visit-dev3.sif /visit/visit3_0_0.linux-x86_64/bin/visit $subargs

